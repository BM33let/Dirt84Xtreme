@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Редакция на профил";
}

<div class="profile-container">
    <h2 class="text-warning text-center mb-4">✏️ Редактирай профила</h2>

    <form asp-action="EditProfile" method="post">
        <div class="form-group">
            <label for="email">Имейл:</label>
            <input asp-for="Email" class="form-control" />
        </div>

        <button type="submit" class="btn btn-ride mt-3">Запази</button>
        <a asp-action="Profile" class="btn btn-secondary mt-3 ms-2">Назад</a>
    </form>
</div>
