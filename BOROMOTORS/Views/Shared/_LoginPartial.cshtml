@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav d-flex align-items-center">
        <li class="nav-item">
            <a class="nav-link fw-bold text-warning d-flex align-items-center gap-2" asp-controller="Account" asp-action="Profile">
                🏍️ Здравей, райдър!
            </a>
        </li>
        <li class="nav-item">
            <form asp-controller="Account" asp-action="Logout" method="post">
                <button type="submit" class="btn btn-ride ms-2">Изход</button>
            </form>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-warning" asp-controller="Account" asp-action="Login">Вход</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-warning" asp-controller="Account" asp-action="Register">Регистрация</a>
        </li>
    </ul>
}
