@model BOROMOTORS.Models.DirtBike

@{
    ViewData["Title"] = "Детайли за мотора";
}

<div class="container py-5">
    <div class="card shadow-lg border-0 p-4" style="background-color: #212121; color: white;">
        <div class="row g-4">
            <div class="col-md-6 text-center">
                <img src="@Model.ImageUrl" alt="@Model.Model" class="img-fluid rounded" style="max-height: 400px; object-fit: contain;">
            </div>
            <div class="col-md-6">
                <h2 class="text-warning">@Model.Model</h2>
                <hr style="border-top: 2px solid orange;">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item bg-dark text-white"><strong>Марка:</strong> @Model.Manufacturer</li>
                    <li class="list-group-item bg-dark text-white"><strong>Цена:</strong> @(Convert.ToDecimal(Model.Price).ToString("N2")) лв.
                    <li class="list-group-item bg-dark text-white"><strong>Мощност:</strong> @Model.Horsepower к.с.</li>
                    <li class="list-group-item bg-dark text-white"><strong>Максимална скорост:</strong> @Model.TopSpeed</li>
                    <li class="list-group-item bg-dark text-white"><strong>Тегло:</strong> @Model.Weight кг</li>
                    <li class="list-group-item bg-dark text-white"><strong>Категория:</strong> @Model.Category</li>
                </ul>
                <div class="mt-4">
                    <h5 class="text-warning">Описание:</h5>
                    <p>@Model.Description</p>
                </div>

                @if (!string.IsNullOrEmpty(Model.VideoUrl))
                {
                    <div class="d-grid gap-2 mt-3">
                        <a href="@Model.VideoUrl" target="_blank" class="btn btn-outline-warning">
                            <i class="fa fa-play"></i> Гледай видео
                        </a>
                    </div>
                }
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fa fa-arrow-left"></i> Назад
                    </a>
                    <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="fa fa-cart-plus"></i> Добави в количка
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card:hover {
        transform: scale(1.01);
        transition: 0.3s ease-in-out;
        box-shadow: 0 10px 25px rgba(255, 165, 0, 0.4);
    }
</style>
