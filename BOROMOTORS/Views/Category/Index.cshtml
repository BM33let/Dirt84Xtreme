@model IEnumerable<string>
@* Или смени с CategoryViewModel, ако имаш такъв *@

@{
    ViewData["Title"] = "Категории";
}

<h2 class="text-warning mb-4">🏁 Разгледай категориите</h2>

<div class="row">
    @foreach (var category in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card bg-dark text-white shadow-lg p-3 border border-warning rounded-4">
                <div class="card-body text-center">
                    <h4 class="card-title">@category</h4>
                    <a asp-controller="DirtBikes" asp-action="Index" asp-route-category="@category"
                       class="btn btn-ride mt-2">Разгледай</a>
                </div>
            </div>
        </div>
    }
</div>
